<mvc:View
	controllerName="sap.ui.demo.nav.controller.Home"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>homePageTitle}" titleAlignment="Center"  class="sapUiResponsiveContentPadding">
		<content>
		<VBox class="sapUiSmallMarginTopBottom">
			<Title text="{i18n>routePatterns} ({i18n>navToMethod}):"/>
			<HBox class="sapUiSmallMargin">
				<Button text="HardCoded" press=".onNavToHardCoded" class="sapUiTinyMarginEnd"/>
				<Button text="Mandatory" press=".onNavToMandatory" class="sapUiTinyMarginEnd"/>
				<Button text="Optional" press=".onNavToOptional" class="sapUiTinyMarginEnd"/>
				<Button text="Query" press=".onNavToQuery" class="sapUiTinyMarginEnd"/>
				<Button text="Rest As String" press=".onNavToRestAsString" class="sapUiTinyMarginEnd"/>
			</HBox>
		</VBox>
		<VBox class="sapUiSmallMarginTopBottom">
			<Title text="{i18n>displayMethod}:"/>
			<HBox class="sapUiSmallMargin">
				<Button text="{i18n>DisplayNotFound}" press=".onDisplayNotFound" class="sapUiTinyMarginEnd"/>
			</HBox>
		</VBox>
		<VBox class="sapUiSmallMarginTopBottom">
			<Title text="{i18n>multipleTargets}:"/>
			<HBox class="sapUiSmallMargin">
				<Button text="{i18n>showSecondPage}" press=".onNavToEmployee" class="sapUiTinyMarginEnd"/>
			</HBox>
		</VBox>
		</content>
	</Page>
</mvc:View>
